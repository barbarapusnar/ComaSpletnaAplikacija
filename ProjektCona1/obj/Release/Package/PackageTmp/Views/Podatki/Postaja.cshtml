@model IEnumerable<ProjektCona1.Models.ZaTabele>


@{
    ViewBag.Title = "Postaja " + ViewData["id"];
}
<div class="container">
    <h2 id="podatki">Postaja @ViewData["id"]</h2>
    <div class="btn-group" id="obdobje">
        <a href="#" id="danbtn" class="btn btn-default btnmoj focus" onclick="danChart()">Dan</a>
        <a href="#" id="tedenbtn" class="btn btnmoj" onclick="tedenChart()">Teden</a>
        <a href="#" id="mesecbtn" class="btn btnmoj" onclick="mesecChart()">Mesec</a>
    </div>

    <div id="chart-container" style="border:2px solid black;border-radius:4px;background-color:rgba(255, 255, 255, 0.60);position:relative;width:100%;height:400px;min-width:300px;margin-top:20px;">
        <canvas id="bar-chart"></canvas>
    </div>
    <div id="_delniPodatki" style="border:2px solid black;border-radius:4px;background-color:rgba(255, 255, 255, 0.60);position:relative;width:100%;height:400px;min-width:300px;margin-top:20px;overflow-y: scroll">
        @Html.Partial("PodatkiZaTabele", Model, new ViewDataDictionary
       { new KeyValuePair<string, object>("id", ViewData["id"]),
         new KeyValuePair<string, object>("gumb", ViewData["gumb"]) })
    </div>
</div>
    @*Dan*@
    <script>

    $(".btn-group > .btn").click(function () {
        $(".btn-group > .btn").removeClass("focus");
        $(this).addClass("focus");
    });

    $(document).ready(danChart());

    function danChart() {


        $('#bar-chart').remove(); // this is my <canvas> element
        $('#chart-container').append('<canvas id="bar-chart"></canvas>');

    var podatki = @Html.Raw(Json.Encode(ViewData["Dan"]));

    var temp = podatki.map(function (item) {
        return item.tempMax
        });

        var datumi = podatki.map(function (item) {
            var x = item.Cas.toString();
            x=x+':00'
            return x;
        });
    

    var padavine = podatki.map(function (item) {
        return item.padSUM
    });



        new Chart(document.getElementById("bar-chart"), {
            type: 'bar',
            data: {
                labels: datumi,
                datasets: [
                    {
                        type: 'line',
                        label: "Temperatura",
                        backgroundColor: 'orangered',
                        borderColor: 'orangered',
                        borderWidth: 2,
                        data: temp,
                        fill: false,
                        yAxisID: 'yaxis2',
                        cubicInterpolationMode: 'monotone'
                    },
                    {
                        type: 'bar',
                        label: "Padavine",
                        borderColor: '#A1ABDE',
                        backgroundColor: "#A1ABDE",
                        hoverBackgroundColor: "#959EC7",
                        hoverBorderColor: "#959EC7",
                        borderWidth: 2,
                        data: padavine,
                        yAxisID: 'yaxis1'
                    }

                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    xAxes: [{
                        barPercentage: 0.8,
                        categoryPercentage: 1,
                        ticks: {
                            callback: function (tick, index, array) {
                                return (index % 2) ? tick : tick;
                            },
                        },
                        scaleLabel: {
                            display: true,
                            labelString: 'Ura',
                            fontSize: 11
                        },
                    }],
                    yAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Padavine',
                            fontSize: 11
                        },
                        barPercentage: 0.85,
                        categoryPercentage: 1,
                        type: 'linear',
                        id: 'yaxis1',
                        display: true,
                        position: 'right',
                        ticks: {
                            beginAtZero: true,
                            callback: function (value, index, values) {
                                return value + 'mm';
                            }
                        },
                        gridLines: {
                            drawOnChartArea: false,
                        }
                    },
                    {
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Temperatura',
                            fontSize: 11
                        },
                        type: 'linear',
                        id: 'yaxis2',
                        display: true,
                        position: 'left',
                        ticks: {
                            max: 50,
                            beginAtZero: true,
                            callback: function (value, index, values) {
                                return value + '°C';
                            }
                        }
                    }]
                },
                legend: { display: true },
                tooltips: {
                    mode: 'index',
                    intersect: false
                },
                title: {
                    display: true,
                    text: 'Temperatura in padavine zadnjih 24ur',
                    fontSize: 16
                },
                showXLabels: 10,
            }


        });
         var categoryId = "dan";
        var i=@ViewData["id"];
        $("#_delniPodatki").load('@(Url.Action("PodatkiZaTabele","Podatki",null, Request.Url.Scheme))?id=' + i+'&gumb='+categoryId);
    }
    </script>

